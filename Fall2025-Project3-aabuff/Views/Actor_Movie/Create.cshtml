@model Fall2025_Project3_aabuff.Models.Actor_Movie

@{
    ViewData["Title"] = "Create Actor-Movie Relationship";
}

<h1>Create Actor-Movie Relationship</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label for="ActorId" class="control-label">Actor</label>
                <select name="ActorId" id="ActorId" class="form-control">
                    <option value="">-- Select Actor --</option>
                    @foreach (var actor in ViewBag.ActorId)
                    {
                        <option value="@actor.Value">@actor.Text</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="MovieId" class="control-label">Movie</label>
                <select name="MovieId" id="MovieId" class="form-control">
                    <option value="">-- Select Movie --</option>
                    @foreach (var movie in ViewBag.MovieId)
                    {
                        <option value="@movie.Value">@movie.Text</option>
                    }
                </select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>